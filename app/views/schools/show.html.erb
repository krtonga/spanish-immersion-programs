<!-- THIS IS THE COMMENT SECTION -->
  <div="new_comment">
    <div class="header">
    </div>

    <div class="wrapA">
      <img class="flickr_photo" src="<%= @photo_url2 %>" alt="">
    </div>

    <div class="city" >
      <h1>< COMMENTS for <%= @school.name %> ></h1><br />
      <p><em> /comment-count:                 /rating:</em></p>
    </div>

    <div class="header">
      <a href="/schools"> HOME</a>
    </div>


    <div>
      <%= form_for @comment, url: school_comments_path({school_id: @school.id}) do |cf| %>
          <%= cf.label :user_name%>
          <%= cf.text_field :user_name%>
          <%= cf.label :email%>
          <%= cf.text_field :email%>
          <%= cf.label :source%>
          <%= cf.text_field :source%><br />
          <%= cf.label :message%>
          <%= cf.text_area :message%>
          <%= cf.submit %>
      <% end %>
    </div>

    <div class="rw-ui-container"></div>

  <hr>

  <div class="list">
    <table class="comment_table">
      <%= @school.comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.user_name %>
        </td>
      </tr>
      <% end %>

    </table>

  </div>





</div>


















